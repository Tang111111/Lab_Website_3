<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				
				 <%
				 var image_src='../resources/img/helmet.jpg';
                 if(data1)
                 {
                 	image_src=data1.img_src;
                 }%>
               
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form" action="/player_info/post" method="get">
					<% var options='';%>
					<%
                      if(data){
                      data.forEach(function(item){
					  options+='<option value="'+item.id+'">'+item.name+'</option>';
					  }); %>
                      <%}%>
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <%- options %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->

							<th>Year</th>
							<td><%- data1.year %></td>
						</tr>
						<tr>
							<th>Major</th>
							<td><%- data1.major %></td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><%- games_played.count %></td>
						</tr>
						<tr>
							<td>Passing Yards:<%-data1.passing_yards%> </td>
							<td>Avg. Passing Yards: <%-Math.round(data1.passing_yards/games_played.count)%></td>
						</tr>
						<tr>
							<td>Rushing Yards:<%-data1.rushing_yards%> </td>
							<td>Avg. Rushing Yards: <%-Math.round(data1.rushing_yards/games_played.count)%></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%-data1.receiving_yards%></td>
							<td>Avg. Receiving Yards: <%-Math.round(data1.receiving_yards/games_played.count)%></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>